<odoo>
    <data>
        <!-- Picking Labels-->
        <record id="paperformat_picking_product_label" model="report.paperformat">
            <field name="name">Product Label Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">57</field>
            <field name="page_width">40</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="stock_picking_labels.action_picking_labels_new" model="ir.actions.report">
            <field name="paperformat_id" ref="stock_picking_labels.paperformat_picking_product_label"/>
        </record>
        <record id="stock_picking_labels.action_picking_labels_product" model="ir.actions.report">
            <field name="paperformat_id" ref="stock_picking_labels.paperformat_picking_product_label"/>
        </record>
        <record id="stock_picking_labels.action_picking_labels_product_product" model="ir.actions.report">
            <field name="paperformat_id" ref="stock_picking_labels.paperformat_picking_product_label"/>
        </record>


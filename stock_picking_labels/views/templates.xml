                                    <tr>
                                        <th style="text-align: center;">
                                            <strong t-field="move.product_id.display_name"/>

                                        </th>
                                    </tr>
                                      <t t-if="move.product_id.barcode">
                                        <tr>
                                        <td style="text-align: center; vertical-align: middle;" class="col-5">

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_line_sale_order_price_updated" model="ir.ui.view">
            <field name="name">view.line.sale.order.price.updated</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_cost_show"/>
                </xpath>
                
                <xpath expr="//field[@name='margin']" position="replace">
                    <field name="margin" attrs="{'invisible':[('is_cost_show','=',False)]}"/>
                </xpath>

<!--                 <xpath expr="//field[@name='purchase_price']" position="replace">
                    <field name="purchase_price" attrs="{'invisible':[('is_cost_show','=',False)]}"/>
                </xpath> -->

            </field>
        </record>
    </data>
</odoo>
